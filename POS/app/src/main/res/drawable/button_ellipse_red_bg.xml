<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="@dimen/size_2" android:bottomRightRadius="@dimen/size_2" android:topLeftRadius="@dimen/size_2" android:topRightRadius="@dimen/size_2" />

            <stroke android:width="12px" android:color="@color/blue_app" />

            <solid android:color="@color/blue_app" />
        </shape>

    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="@dimen/size_2" android:bottomRightRadius="@dimen/size_2" android:topLeftRadius="@dimen/size_2" android:topRightRadius="@dimen/size_2" />

            <stroke android:width="12px" android:color="@color/blue_app" />

            <solid android:color="@color/blue_app" />
        </shape>

    </item>

</selector>