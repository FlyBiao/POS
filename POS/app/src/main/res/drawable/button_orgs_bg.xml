<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="0px" android:bottomRightRadius="0px" android:topLeftRadius="0px" android:topRightRadius="0px" />

            <stroke android:width="2px" android:color="@color/rgb_line" />

            <solid android:color="@color/rgb_0x000" />
        </shape>
        
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="0px" android:bottomRightRadius="0px" android:topLeftRadius="0px" android:topRightRadius="0px" />

            <stroke android:width="2px" android:color="@color/rgb_line" />

            <solid android:color="@color/rgb_f2_click" />
        </shape>
        
     </item>

</selector>