<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_color"
    android:orientation="vertical">

    <include layout="@layout/base_title"
             android:id="@+id/ll_base_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/base_content_bg"
        android:padding="@dimen/size_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_10"
                android:text="盘点仓店"/>
            <TextView
                android:id="@+id/tv_select_value"
                android:layout_width="match_parent"
                android:layout_height="40.0dip"
                android:background="@drawable/button_org_bg"
                android:padding="@dimen/size_10"
                android:drawableRight="@mipmap/down_arrows"
                android:text=""/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_20"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_10"
                android:text="盘点时间"/>
            <TextView
                android:id="@+id/tv_create_inventory_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_org_bg"
                android:drawableRight="@mipmap/down_arrows"
                android:paddingRight="@dimen/size_10"
                android:paddingTop="@dimen/size_10"
                android:paddingBottom="@dimen/size_10"
                android:paddingLeft="@dimen/size_10"
                android:text="2017-08-28"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_20"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_10"
                android:text="盘点类型"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_100"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_overall"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_hui_bg"
                    android:textColor="@color/rgb_text_org"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="全盘"/>
                <TextView
                    android:id="@+id/tv_suction"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/size_10"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/button_org_bg"
                    android:text="抽盘"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
