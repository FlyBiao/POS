<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/size_10"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_order_barcodecode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="@dimen/font_18"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxWidth="140dp"
            android:text="3434343434"/>

        <TextView
            android:id="@+id/tv_shop_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxWidth="140dp"
            android:text="立领上衣"
            android:textSize="@dimen/font_18"/>

        <TextView
            android:id="@+id/tv_shop_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/font_18"
            android:text="89"/>

        <TextView
            android:id="@+id/tv_order_payment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1"
            android:textSize="@dimen/font_18"/>

        <TextView
            android:id="@+id/tv_barcode_shop_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="false"
            android:text="23"
            android:textSize="@dimen/font_18"/>

        <TextView
            android:id="@+id/tv_gifts_shop"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:singleLine="false"
            android:textColor="@color/dimgrey1"
            android:text="赠品"
            android:visibility="gone"
            android:textSize="@dimen/font_18"/>

    </LinearLayout>

    <View
        style="@style/common_divider_line"
        />

</LinearLayout>
