<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/ll_order_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_20"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/size_14"
                android:orientation="vertical"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/size_25"
                    android:paddingRight="@dimen/size_25"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_16"
                        android:textColor="@color/blue_app"
                        android:text="商品名称："/>
                    <TextView
                        android:id="@+id/tv_order_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_16"
                        android:layout_alignParentRight="true"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_6"
                    android:paddingLeft="@dimen/size_25"
                    android:paddingRight="@dimen/size_25"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_16"
                        android:textColor="@color/blue_app"
                        android:text="商品款号："/>
                    <TextView
                        android:id="@+id/tv_order_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_16"
                        android:layout_alignParentRight="true"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_8"
                    android:paddingLeft="@dimen/size_25"
                    android:paddingRight="@dimen/size_25"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_goods_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_16"
                        android:textColor="@color/blue_app"
                        android:text="商品数量："/>
                    <TextView
                        android:id="@+id/tv_order_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_goods_sum"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_16"
                        />
                    <TextView
                        android:id="@+id/tv_return_goods"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:padding="@dimen/size_5"
                        android:paddingRight="@dimen/size_5"
                        android:paddingLeft="@dimen/size_5"
                        android:background="@drawable/button_ellipse_red_bg"
                        android:layout_alignParentRight="true"
                        android:text="退货"
                        android:visibility="gone"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_6"
                    android:paddingLeft="@dimen/size_25"
                    android:paddingRight="@dimen/size_25"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_16"
                        android:textColor="@color/blue_app"
                        android:text="商品售价："/>
                    <TextView
                        android:id="@+id/tv_order_sale_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_16"
                        android:layout_alignParentRight="true"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_6"
                    android:paddingLeft="@dimen/size_25"
                    android:paddingRight="@dimen/size_25"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_16"
                        android:textColor="@color/blue_app"
                        android:text="支付单价："/>
                    <TextView
                        android:id="@+id/tv_order_pay_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_16"
                        android:layout_alignParentRight="true"
                        />
                </LinearLayout>

                <View style="@style/common_divider_line"
                      android:layout_marginBottom="@dimen/size_10"
                      android:layout_marginTop="@dimen/size_10"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
